<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- The text appearance for principal information (text that need to be highlighted) -->
    <style name="wm_fm_primary_text_appearance">
        <item name="android:textSize">@dimen/wm_fm_primary_text_size</item>
        <item name="android:textColor">@color/wm_fm_black_transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The text appearance for secondary information (text with a lower importance) -->
    <style name="wm_fm_secondary_text_appearance">
        <item name="android:textSize">@dimen/wm_fm_secondary_text_size</item>
        <item name="android:textColor">@color/wm_fm_black_transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="wm_fm_top_panel">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <!-- Base application theme. -->
    <style name="WMFMAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wm_fm_colorPrimary</item>
        <item name="colorPrimaryDark">@color/wm_fm_colorPrimaryDark</item>
        <item name="colorAccent">@color/wm_fm_colorAccent</item>
    </style>

    <style name="WMFMAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WMFMAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WMFMAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WMFMAppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="colorPrimary">@color/wm_fm_colorPrimary</item>
        <item name="colorPrimaryDark">@color/wm_fm_colorPrimaryDark</item>
        <item name="colorAccent">@color/wm_fm_colorAccent</item>
    </style>

    <style name="WMFMAppTheme.Dialog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="WMFMAppTheme.Dialog.NoActionBar.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

</resources>