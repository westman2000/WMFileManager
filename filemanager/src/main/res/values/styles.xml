<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- The text appearance for principal information (text that need to be highlighted) -->
    <style name="wm_fm_primary_text_appearance">
        <item name="android:textSize">@dimen/wm_fm_primary_text_size</item>
        <item name="android:textColor">@color/wm_fm_black_transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The text appearance for secondary information (text with a lower importance) -->
    <style name="wm_fm_secondary_text_appearance">
        <item name="android:textSize">@dimen/wm_fm_secondary_text_size</item>
        <item name="android:textColor">@color/wm_fm_black_transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>